#header
    background: color-header-background
    padding-bottom: nav-height
    position: relative

#header-outer
    height: 100%
    position: relative

#header-inner
    position: relative

#header-title
    clearfix()
    text-align: center
    padding: 15px 20px
    .logo-wrap, .subtitle-wrap
        float: left
    .subtitle-wrap
        margin-left: 20px
    .subtitle
        font-size: 16px
        font-style: italic
        line-height: logo-height
        color: color-nav-foreground
        text-shadow: 0 1px rgba(0, 0, 0, 0.2)
